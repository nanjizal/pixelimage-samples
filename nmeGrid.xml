<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Pixelimage example with NME" package="net.nanjizal.pixelimageNMEGridexample" version="0.0.1" company="Nanjizal" />

	<!-- output -->
	<app main="pixelimage_samples.pixelimage_nme.Grid" path="nmes/" file="Grid" />

	<!-- window properties -->
	<window background="#000000" fps="60" />
	<window width="1024" height="768"  background="0x181818" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="4" if="cpp" />
	
	<set name="SWF_VERSION" value="11.2" />
	
	<!-- classpath, haxe libs -->
	<source path="src/" />
	
	<haxelib name="nme" />
    <haxelib name="lime" />
    <haxelib name="justPath"/>
    <haxelib name="pixelimage"/>
    <haxelib name="format"/>
    <haxelib name="Vision"/>
    
	<!-- optimize output
	<haxeflag name="-dce full" /> -->

</project>